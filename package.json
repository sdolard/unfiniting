{
  "name": "unfiniting",
  "version": "0.1.0",
  "description": "A small CLI REPL implemented in TypeScript",
  "type": "commonjs",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cli.d.ts",
      "require": "./dist/cli.js"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "unfiniting": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest --run",
    "test:watch": "vitest",
    "coverage": "vitest --coverage",
    "aider:auto-test": "node scripts/aider-autotest.js",
    "postbuild": "node ./scripts/add-shebang.js && chmod +x dist/cli.js",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:md": "prettier --write \"**/*.md\""
  },
  "keywords": [
    "cli",
    "repl",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sdolard/unfiniting.git"
  },
  "bugs": {
    "url": "https://github.com/sdolard/unfiniting/issues"
  },
  "homepage": "https://github.com/sdolard/unfiniting#readme",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "chokidar": "^3.6.0",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@9.0.0"
}
